<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".auth.SignUpActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_background"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/top_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text1"
                android:text="환영합니다!"
                android:textSize="16sp"
                android:fontFamily="@font/suit_semi_bold"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="34dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/suit_bold"
                android:text="아래 정보들을 입력해주세요:)"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginBottom="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text1" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/id_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="5dp"
            app:layout_constraintTop_toBottomOf="@id/top_background"
            app:strokeColor="@color/blue">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/id_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="15dp"
                    android:layout_marginStart="46dp"
                    android:layout_marginEnd="20dp"
                    android:background="@null"
                    android:fontFamily="@font/suit_medium"
                    android:hint="아이디를 입력해주세요"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/blue"
                    android:textColorHint="@color/blue"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/id_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="11dp"
                    android:src="@drawable/person_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/blue" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/password_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="5dp"
            app:layout_constraintTop_toBottomOf="@id/id_box"
            app:strokeColor="@color/G3">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/password_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="15dp"
                    android:layout_marginStart="46dp"
                    android:layout_marginEnd="20dp"
                    android:background="@null"
                    android:fontFamily="@font/suit_medium"
                    android:hint="비밀번호를 입력해주세요"
                    android:inputType="textPassword"
                    android:textColor="@color/G3"
                    android:textColorHint="@color/G3"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/password_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="11dp"
                    android:src="@drawable/lock_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/name_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="5dp"
            app:layout_constraintTop_toBottomOf="@id/password_box"
            app:strokeColor="@color/G3">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="15dp"
                    android:layout_marginStart="46dp"
                    android:layout_marginEnd="20dp"
                    android:background="@null"
                    android:fontFamily="@font/suit_medium"
                    android:hint="실명을 입력해주세요"
                    android:inputType="text"
                    android:textColor="@color/G3"
                    android:textColorHint="@color/G3"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/name_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="11dp"
                    android:src="@drawable/name_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/call_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="5dp"
            app:layout_constraintTop_toBottomOf="@id/name_box"
            app:strokeColor="@color/G3">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/call_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="15dp"
                    android:layout_marginStart="46dp"
                    android:layout_marginEnd="20dp"
                    android:background="@null"
                    android:fontFamily="@font/suit_medium"
                    android:hint="전화번호를 입력해주세요"
                    android:inputType="phone"
                    android:textColor="@color/G3"
                    android:textColorHint="@color/G3"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/call_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="11dp"
                    android:src="@drawable/name_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/email_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="5dp"
            app:layout_constraintTop_toBottomOf="@id/call_box"
            app:strokeColor="@color/G3">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/email_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="15dp"
                    android:layout_marginStart="46dp"
                    android:layout_marginEnd="20dp"
                    android:background="@null"
                    android:fontFamily="@font/suit_medium"
                    android:hint="이메일을 입력해주세요"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/G3"
                    android:textColorHint="@color/G3"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/email_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="11dp"
                    android:src="@drawable/email_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/email_box"
            app:layout_constraintEnd_toStartOf="@id/id_box"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/id_box">


            <androidx.cardview.widget.CardView
                android:layout_marginTop="19dp"
                android:id="@+id/id_circle"
                app:cardElevation="0dp"
                android:backgroundTint="@color/blue"
                app:cardCornerRadius="11dp"
                android:layout_width="11dp"
                android:layout_height="11dp"/>

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:id="@+id/id_line"
                android:background="@color/blue"
                android:layout_width="1dp"
                android:layout_height="65dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/password_circle"
                app:cardElevation="0dp"
                android:backgroundTint="@color/G3"
                app:cardCornerRadius="11dp"
                android:layout_width="11dp"
                android:layout_height="11dp"/>

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:id="@+id/password_line"
                android:background="@color/G3"
                android:layout_width="1dp"
                android:layout_height="65dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/name_circle"
                app:cardElevation="0dp"
                android:backgroundTint="@color/G3"
                app:cardCornerRadius="11dp"
                android:layout_width="11dp"
                android:layout_height="11dp"/>

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:id="@+id/name_line"
                android:background="@color/G3"
                android:layout_width="1dp"
                android:layout_height="65dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/call_circle"
                app:cardElevation="0dp"
                android:backgroundTint="@color/G3"
                app:cardCornerRadius="11dp"
                android:layout_width="11dp"
                android:layout_height="11dp"/>

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:id="@+id/call_line"
                android:background="@color/G3"
                android:layout_width="1dp"
                android:layout_height="65dp"/>

            <androidx.cardview.widget.CardView
                android:layout_marginBottom="20dp"
                android:id="@+id/email_circle"
                app:cardElevation="0dp"
                android:backgroundTint="@color/G3"
                app:cardCornerRadius="11dp"
                android:layout_width="11dp"
                android:layout_height="11dp"/>


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/sign_up_button"
            android:layout_marginTop="200dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="@color/G3"
            app:layout_constraintTop_toBottomOf="@id/email_box"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardCornerRadius="8dp">

            <TextView
                android:layout_marginVertical="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/suit_bold"
                android:text="회원가입"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>